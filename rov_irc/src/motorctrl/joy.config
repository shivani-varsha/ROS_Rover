# teleop_twist_joy.yaml

joy_config: "xbox"

# Axis mappings
axis_linear: 1       # Joystick Y-axis
axis_angular: 2      # Joystick X-axis

# Speed scales
_scale_linear: 0.25    # Maximum linear speed (in m/s)
_scale_angular: 0.25   # Maximum angular speed (in rad/s)

# Optional: Enable turbo mode for faster speeds when a button is pressed
axis_linear_turbo: 1
axis_angular_turbo: 2
scale_linear_turbo: 2.0   # Turbo mode linear speed
scale_angular_turbo: 2.0  # Turbo mode angular speed

enable_button: -1    # No button needed to enable joystick commands

enable_turbo_button: 0